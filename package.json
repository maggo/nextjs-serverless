{
  "name": "nextjs-serverless",
  "version": "1.0.0",
  "description": "Testing nextjs deployments on firebase and netlify",
  "engines": {
    "node": "10"
  },
  "scripts": {
    "dev": "next src/app",
    "preserve": "npm run build-functions && npm run build-app && npm run copy-app && npm run export-app && node scripts/rewrite-ssr-pages.js && npm run copy-deps",
    "serve": "cross-env NODE_ENV=production firebase serve",
    "deploy": "cross-env NODE_ENV=production firebase deploy",
    "clean": "rimraf \".next\" && rimraf \"dist/functions\" && rimraf \"dist/static\"",
    "build-app": "next build \"src/app\"",
    "export-app": "next export -o dist/static src/app",
    "copy-app": "cpx \".next/**/*\" \"dist/functions/firebase/next\" -C && cpx \".next/**/*\" \"dist/functions/netlify/nextApp/next\" -C",
    "build-functions": "tsc --project src/functions",
    "copy-deps": "cpx \"*{package.json,yarn.lock}\" \"dist/functions/firebase\" -C",
    "bundle-netlify-functions": "yarn netlify functions:build --src dist/functions/netlify",
    "deploy-netlify": "cross-env NODE_ENV=production npm run preserve && npm run bundle-netlify-functions"
  },
  "dependencies": {
    "express": "^4.17.1",
    "firebase-admin": "^8.9.0",
    "firebase-functions": "^3.1.0",
    "next": "^9.2.0",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "serverless-http": "^2.3.0"
  },
  "devDependencies": {
    "@types/node": "13.1.8",
    "@types/react": "^16.9.18",
    "@types/react-dom": "16.9.5",
    "cpx": "1.5.0",
    "cross-env": "6.0.3",
    "firebase-tools": "^7.1.0",
    "netlify-cli": "^2.30.0",
    "rimraf": "3.0.0",
    "tslint": "^6.0.0",
    "tslint-react": "^4.2.0",
    "typescript": "^3.2.0"
  }
}
