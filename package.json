{
  "name": "with-firebase-hosting-and-typescript",
  "version": "1.0.0",
  "description": "Host Next.js SSR app on Firebase Cloud Functions with Firebase Hosting redirects. Built with typescript.",
  "engines": {
    "node": "10"
  },
  "scripts": {
    "dev": "next src/app",
    "preserve": "npm run build-functions && npm run build-app && npm run copy-app && npm run export-app && node scripts/rewrite-ssr-pages.js && npm run copy-deps && npm run install-deps",
    "serve": "cross-env NODE_ENV=production firebase serve",
    "deploy": "cross-env NODE_ENV=production firebase deploy",
    "clean": "rimraf \".next\" && rimraf \"dist/functions\" && rimraf \"dist/static\"",
    "build-app": "cross-env NODE_ENV=production next build \"src/app\"",
    "export-app": "next export -o dist/static src/app",
    "copy-app": "cpx \".next/**/*\" \"dist/functions/.next\" -C",
    "build-functions": "tsc --project src/functions",
    "lint-app": "tslint --project src/app",
    "typecheck-app": "tsc --project src/app",
    "lint-functions": "tslint --project src/functions",
    "copy-deps": "cpx \"*{package.json,yarn.lock}\" \"dist/functions\" -C",
    "install-deps": "cd \"dist/functions\" && yarn"
  },
  "dependencies": {
    "firebase-admin": "^8.9.0",
    "firebase-functions": "^3.1.0",
    "next": "^9.2.0",
    "react": "16.12.0",
    "react-dom": "16.12.0"
  },
  "devDependencies": {
    "@types/node": "13.1.8",
    "@types/react": "^16.6.0",
    "@types/react-dom": "16.9.5",
    "cpx": "1.5.0",
    "cross-env": "6.0.3",
    "firebase-tools": "^7.1.0",
    "rimraf": "3.0.0",
    "tslint": "^5.11.0",
    "tslint-react": "^4.1.0",
    "typescript": "^3.2.0"
  }
}
