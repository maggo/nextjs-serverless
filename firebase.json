{
  "functions": {
    "source": "dist/functions",
    "predeploy": [
      "yarn build-functions",
      "yarn build-app",
      "yarn copy-app",
      "yarn copy-deps"
    ]
  },
  "hosting": {
    "public": "dist/static",
    "cleanUrls": true,
    "rewrites": [
      {
        "source": "/ssr",
        "function": "nextApp"
      },
      {
        "source": "/dynamic/*",
        "function": "nextApp"
      },
      {
        "source": "/folder/*/*",
        "function": "nextApp"
      },
      {
        "source": "/path/**",
        "function": "nextApp"
      },
      {
        "source": "/ssg-dynamic/*",
        "function": "nextApp"
      },
      {
        "source": "/static-dynamic/*",
        "destination": "/static-dynamic/[id].html"
      }
    ],
    "predeploy": [
      "yarn build-app",
      "yarn export-app",
      "node scripts/rewrite-ssr-pages.js"
    ]
  }
}